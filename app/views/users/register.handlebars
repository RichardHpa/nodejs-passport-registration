<div class="container">
    {{#if errors}}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-exclamation-triangle"></i> Hold up!</strong> There are some errors with your form, check out the fields below.
            <hr>
            <ul class="list-group error-list">
                {{#each errors}}
                  <li>{{msg}}</li>
                {{/each}}
            </ul>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
          </div>
    {{/if}}

    <h2 class="page-header">Register</h2>
    <div class="card">
        <div class="card-body">
            <form class="" action="/users/register" method="post">
                <div class="form-group">
                    <label for="name">Name *</label>
                    <input type="text" name="name" placeholder="Name" class="form-control {{nameValid}}" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="email">Email *</label>
                    <input type="email" name="email" placeholder="Email" class="form-control {{emailValid}}" value="{{email}}">
                </div>
                <div class="form-group">
                    <label for="password">Password *</label>
                    <input type="password" name="password" placeholder="Password" class="form-control {{passwordValid}}">
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password *</label>
                    <input type="password" name="password2" placeholder="Password" class="form-control {{password2Valid}}">
                </div>
                <button type="submit" class="btn btn-primary" name="button">Register</button>
                <p class="text-muted">* is required</p>
            </form>
        </div>
    </div>
</div>
